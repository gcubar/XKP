<?xml version="1.0" encoding="utf-8"?>
<com.xkp.android.SimpleTest.XKPLayout 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	xmlns:xkp="http://schemas.android.com/apk/res/com.xkp.android.SimpleTest" 
	android:id="@+id/mainApplication" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    	<TextView android:id="@+id/lblFullName" 
        	android:text="Your fullname is "
        	xkp:layout_x="10px"
        	xkp:layout_y="130px"
        	android:layout_width="200px"
        	android:layout_height="30px"
        	/>
    	<Button android:id="@+id/btnFullName" 
        	android:text="Resolve FullName"
        	xkp:layout_x="10px"
        	xkp:layout_y="90px"
        	android:layout_width="100px"
        	android:layout_height="33px"
        	/>
    	<EditText android:id="@+id/edtLastName" 
        	xkp:layout_x="120px"
        	xkp:layout_y="50px"
        	android:layout_width="150px"
        	android:layout_height="30px"
        	/>
    	<TextView android:id="@+id/lblLastName" 
        	android:text="Enter lastname: "
        	xkp:layout_x="10px"
        	xkp:layout_y="50px"
        	android:layout_width="140px"
        	android:layout_height="30px"
        	/>
    	<EditText android:id="@+id/edtFirstName" 
        	xkp:layout_x="120px"
        	xkp:layout_y="10px"
        	android:layout_width="150px"
        	android:layout_height="30px"
        	/>
    	<TextView android:id="@+id/lblFirstName" 
        	android:text="Enter firstname: "
        	xkp:layout_x="10px"
        	xkp:layout_y="10px"
        	android:layout_width="140px"
        	android:layout_height="30px"
        	/>
</com.xkp.android.SimpleTest.XKPLayout>

