<xss:project>
    <path generator="app.xss"
          class_library="classes.xml"
          source_path="../ms/" 
          output_path="../output/" 
          output_file="ms-test.html"/>

    <idiom class="js-idiom" id_as_this="true"/>

    <application source="ms-test.xs" width="640" height="400" title="">
        <resources>
            <resource type="image" src="images/img.png"/>
            <resource type="image" src="images/img2.png"/>
            <resource type="image" src="images/progress.empty.png"/>
            <resource type="image" src="images/progress.full.png"/>
        </resources>
        
        <sequence id="">
            <at time="0">
                <animate property="x" from="0" to="20" in="3s"/>
                <animate property="y" from="0" to="20" in="3s"/>
            </at>
            <at time="0">
                <run sequence="grow"/>
            </at>
            
            <sequence id="grow">
                <animate property="width"  from="10" to="200" in="5s"/>
                <animate property="height" from="10" to="200" in="5s"/>
            </sequence>
            
            <when expr="width >= 100">
                <execute method="shrink"/>
            </when>

            <when expr="width <= 50">
                <run sequence="grow"/>
            </when>
        </sequence>
      
        <button id="btn1" up="images/img.png" down="images/img2.png" x="10" y="10" width="40" height="40"/>
        <label id="label1" caption="Hello" font="bold 12px Verdana" x="10" y="70"/>

        <div x="50" y="20" width="300" height="300">
            <img src="images/img.png" x="0" y="0" width="100" height="100"/>
            <state_button id="btn2" x="120" y="0" width="50" height="50" up="images/img.png" down="images/img2.png"/>
            <progress id="pbar" x="120" y="60" width="50" height="8"/>
            
            <switch id="switch1" x="120" y="80" width="200" height="200">
                <label id="switchLabel1" x="0" y="0" caption="Now you see me"/>
                <label id="switchLabel2" x="0" y="0" caption="Now you dont"/>
            </switch>
        </div>
    </application>
</xss:project>
