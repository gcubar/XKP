<xml>
    <class id="qt_component" qt_ui="true">
        <properties>
            <!-- geometry location -->
            <property name="x" type="int" set_xss="move(<xss:e v='value'/>, <xss:e v='object'/>.y())" get_fn="x"/>
            <property name="y" type="int" set_xss="move(<xss:e v='object'/>.x(), <xss:e v='value'/>)" get_fn="y"/>
            <property name="width" type="int" set_xss="resize(<xss:e v='value'/>, <xss:e v='object'/>.height())" get_fn="width"/>
            <property name="height" type="int" set_xss="resize(<xss:e v='object'/>.width(), <xss:e v='value'/>)" get_fn="height"/>

            <property name="visible" type="bool" set_fn="setVisible" get_fn="isVisible"/>
        </properties>
        <events>
            <event name="click" qt_name="clicked"/>
            <event name="up" qt_name="mouseup"/>
        </events>
    </class>
  
    <class id="button" super="qt_component" header="QPushButton" tag_name="QPushButton">
        <properties>
            <property name="caption" type="string" qt_ui="true" set_fn="setText" get_fn="text"/>
        </properties>
    </class>
  
    <class id="label" super="qt_component" header="QLabel" tag_name="QLabel">
        <properties>
            <property name="caption" type="string" qt_ui="true" set_fn="setText" get_fn="text"/>
        </properties>
    </class>
  
    <class id="application" header="QWidget" tag_name="QWidget" qt_ui="false">
        <properties>
            <property name="id" type="string"/>
            <property name="title" type="string"/>
            <property name="width" type="int"/>
            <property name="height" type="int"/>
        </properties>
    </class>
</xml>
