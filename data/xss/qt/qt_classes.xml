<xml>
    
    <!--TODO: Look at ms, use inheritance-->
    
    <class id="button" header="QPushButton" tag_name="QPushButton">
      <properties>
        <property name="caption" type="string" set_fn="setText" get_fn="text"/>
        <!--<property name="visible" type="bool" set_fn="setVisible" get_fn="isVisible"/> -->
        <property name="width" type="int" set_xss="size(<xss:e v ='value'/>, <xss:e v ='object'/>.width())" get_fn="width" />
        <property name="height" type="int" set_fn="size" get_fn="height"/>
      </properties>
      <event_declaration>
        <event name="click" qt_name="on_click"/>  
        <event name="up" qt_name="mouse_up"/>  
      </event_declaration>
    </class>
    <class id="label" header="QLabel" tag_name="QLabel">
      <properties>
        <property name="caption" type="string" set_fn="setText" get_fn="text"/>
        <!--<property name="visible" type="bool" set_fn="setVisible" get_fn="isVisible"/> -->
        <property name="width" type="int" set_fn="size" get_fn="width" />
        <property name="height" type="int" set_fn="size" get_fn="height"/>
      </properties>
    </class>
    <class id="application" header="QWidget" tag_name="QWidget">
    <properties>
      <property name="id" type="string"/>
      <property name="title" type="string"/>
      <property name="width" type="int"/>
      <property name="height" type="int"/>
    </properties>
    </class>
</xml>
